<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="607.0" prefWidth="468.0" spacing="10.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.eventtickets.gui.NewEventController">
      <children>
          <HBox alignment="CENTER">
              <children>
                  <VBox prefHeight="93.0" prefWidth="468.0" spacing="10.0">
                      <children>
                          <Label styleClass="boldRoboto" text="Create New Event">
                     <font>
                        <Font size="25.0" />
                     </font>
                          </Label>
                          <Label styleClass="roboto" text="Fill in the event information below">
                              <font>
                                  <Font name="Roboto" size="14.0" />
                              </font>
                          </Label>
                      </children>
                      <padding>
                          <Insets top="15.0" />
                      </padding>
                  </VBox>
              </children>
          </HBox>
          <VBox spacing="5.0">
              <children>
                  <Label alignment="TOP_CENTER" styleClass="boldRoboto" text="Event name *">
                      <padding>
                          <Insets top="10.0" />
                      </padding>
                  </Label>
            <TextField fx:id="txtName" promptText="Dog Show Championship" />
              </children>
          </VBox>
          <HBox alignment="CENTER" prefHeight="60.0" prefWidth="468.0" spacing="5.0">
              <children>
                  <VBox prefHeight="78.0" prefWidth="190.0">
                      <children>
                          <Label styleClass="boldRoboto" text="Start date *">
                              <padding>
                                  <Insets top="10.0" />
                              </padding>
                          </Label>
                  <DatePicker fx:id="txtStartDate" />
                      </children>
                  </VBox>
                  <VBox prefHeight="78.0" prefWidth="190.0">
                      <children>
                          <Label styleClass="boldRoboto" text="Start time *">
                              <padding>
                                  <Insets top="10.0" />
                              </padding>
                          </Label>
                  <TextField fx:id="txtStartTime" promptText="1700" />
                      </children>
                  </VBox>
              </children>
          </HBox>
          <HBox alignment="CENTER" prefHeight="60.0" prefWidth="388.0" spacing="5.0">
              <children>
                  <VBox prefHeight="78.0" prefWidth="190.0">
                      <children>
                          <Label styleClass="boldRoboto" text="End date (Optional)">
                              <padding>
                                  <Insets top="10.0" />
                              </padding>
                          </Label>
                  <DatePicker fx:id="txtEndDate" />
                      </children>
                  </VBox>
                  <VBox prefHeight="78.0" prefWidth="190.0">
                      <children>
                          <Label styleClass="boldRoboto" text="End time (Optional)">
                              <padding>
                                  <Insets top="10.0" />
                              </padding>
                          </Label>
                  <TextField fx:id="txtEndTime" promptText="1900" />
                      </children>
                  </VBox>
              </children>
          </HBox>
          <HBox alignment="CENTER">
              <children>
                  <VBox prefHeight="70.0" prefWidth="388.0">
                      <children>
                          <Label styleClass="boldRoboto" text="Location *">
                              <padding>
                                  <Insets top="10.0" />
                              </padding>
                          </Label>
                  <TextField fx:id="txtLocation" promptText="Central Park Arene, 123 Main St." />
                      </children>
                  </VBox>
              </children>
          </HBox>
          <HBox alignment="CENTER">
              <children>
                  <VBox prefHeight="60.0" prefWidth="388.0">
                      <children>
                          <Label styleClass="boldRoboto" text="Location guidance (Optional)">
                              <padding>
                                  <Insets top="10.0" />
                              </padding>
                          </Label>
                  <TextField fx:id="txtLocationGuidance" promptText="Parking available at Lot B" />
                      </children>
                  </VBox>
              </children>
          </HBox>
          <HBox>
              <children>
                  <VBox prefHeight="60.0" prefWidth="388.0">
                      <children>
                          <Label styleClass="boldRoboto" text="Event notes/description *">
                              <padding>
                                  <Insets top="10.0" />
                              </padding>
                          </Label>
                  <TextField fx:id="txtNotes" promptText="Additional information about the event..." />
                      </children>
                  </VBox>
              </children>
          </HBox>
      <HBox alignment="CENTER_RIGHT">
         <children>
            <MFXButton buttonType="RAISED" onAction="#handleConfirmEvent" rippleColor="#7a0ed9" style="-fx-background-color: #228be6;" text="Confirm Event" textFill="WHITE">
               <font>
                  <Font name="Roboto Bold" size="12.0" />
               </font>
            </MFXButton>
         </children>
      </HBox>
      </children>
      <padding>
          <Insets bottom="20.0" left="40.0" right="40.0" />
      </padding>
  </VBox>
